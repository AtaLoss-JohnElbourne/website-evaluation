{
  "name": "website-exit-survey",
  "version": "1.0.0",
  "description": "Node.js backend for website exit intent survey with Excel integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "test:contracts": "jest --testPathPattern=excel-contracts"
  },
  "keywords": [
    "exit-intent",
    "survey",
    "excel",
    "nodejs",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "@azure/msal-node": "^2.4.0",
    "axios": "^1.5.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "jest-environment-node": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "*.js",
      "!coverage/**",
      "!node_modules/**",
      "!jest.config.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
  }
}